<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.ListView.ListViewMenuView"
             Title="{Binding Title}">

    <StackLayout>

        <Button
               FontAttributes="Bold"
               BackgroundColor="Gold"
               BorderColor="Black"
               BorderWidth="5"
               Text="List Names View"
               Command="{Binding OnListNamesClicked}" />

        <Button
               FontAttributes="Bold"
               BackgroundColor="LawnGreen"
               BorderColor="Black"
               BorderWidth="5"
               Text="List Images View"
               Command="{Binding OnListImagesClicked}" />
        <Button
               FontAttributes="Bold"
               BackgroundColor="Silver"
               BorderColor="Black"
               BorderWidth="5"
               Text="List Images View"
               Command="{Binding OnListButtonsClicked}" />

    </StackLayout>

</ContentPage>